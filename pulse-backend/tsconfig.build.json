{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@auth/*": ["auth/*"],
      "@jwt/*": ["jwt/*"],
      "@project/*": ["project/*"],
      "@task/*": ["task/*"],
      "@prisma": ["prisma.service"],
      "@common/*": ["common/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
