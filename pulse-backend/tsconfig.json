{
  "compilerOptions": {
    /* Core Module Settings */
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2022",

    /* Decorators / Metadata (required by NestJS) */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* TypeScript Behavior */
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Build Outputs */
    "outDir": "./dist",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true,
    "incremental": true,

    /* âœ… Absolute Path Aliases */
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "src",
    "paths": {
      "@auth/*": ["auth/*"],
      "@jwt/*": ["auth/jwt/*"],
      "@project/*": ["project/*"],
      "@task/*": ["task/*"],
      "@prisma": ["prisma.service"],
      "@common/*": ["common/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
